<div class="container">

<% if session[:user] %>

  <h2>Choose a Deck</h2>
  <p class="follow_heading">Here is a lits of all the flashcard decks that you can play. Play a round and test your knowledge.</p>
  <% @decks.each do |deck| %>
  <div class="deck_list_name">
    <a href="/d/<%= deck.id %>"><h2><%= deck.name %></h2></a>
    <p><%= deck.description %></p>
  </div>
  <% end %>
<% else %>

<div id="sign_in_register" class="float_left">

  <div class="float_left">
    <h2>Been here before?</h2>
    <p>Log in here:</p>
    <form action='/login' method='POST'>
      <input type="username" name="username" placeholder="username"><br>
      <input type="password" name="password" placeholder="password"><br>
      <input class="submit" type="submit" value="Log In">
    </form>
  </div>
  
  <div class="float_right">
    <h2>New here?</h2>
    <p>Register below:</p>
    <form action="/signup" method="POST">
      <input type="username" name="username" placeholder="username"><br>
      <input type="password" name="password" placeholder="password"><br>
      <input class="submit" type="submit" value="Register">
    </form>
  </div>

</div>

<% end %>

</div>
